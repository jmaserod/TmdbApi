<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.activity.RootActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/posterDetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/titleDetail"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleDetail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:text="titleDetail"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/descriptionDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/titleDetail"
                android:layout_marginTop="10dp"
                android:text="descriptionDetail" />
        </LinearLayout>
        <TextView
            android:id="@+id/averageDetail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="averageDetail"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/backdropDetail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/countDetail"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:text="countDetail" />
    <TextView
        android:id="@+id/adultDetail"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:text="adultDetail" />

    <TextView
        android:id="@+id/dateDetail"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:text="dateDetail" />

</LinearLayout>