<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context=".view.activity.RootActivity">
    <ImageView
        android:id="@+id/backdropDetail"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        android:scaleType="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/averageDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="averageDetail"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="titleDetail"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/descriptionDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/titleDetail"
            android:layout_marginTop="10dp"
            android:text="descriptionDetail"
            android:textColor="@android:color/white"
            android:textSize="15dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/countDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="countDetail"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/adultDetail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="adultDetail"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/dateDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="dateDetail"
            android:textColor="@android:color/white"/>
    </LinearLayout>



</LinearLayout>